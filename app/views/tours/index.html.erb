<div class="hero-container">
    <div class="hero-background"></div>
    <div class="hero-text">
        <h1 class="discover-text">Discover Ghana with the locals</h1> 
        <button class="hero-text-btn"><a href="#find-tours">view tours</a></button>
        <button id="discover-ghana-btn" class="hero-text-btn"><%= link_to "discover Ghana", discover_path %></button>
    </div> 
</div>

<div class="tour-offer">
    <div class="sustainable-icons">
        <%= image_tag("loco2.png") %>
        <h5>Made by locals</h5>
    </div>

    <div class="sustainable-icons">
        <%= image_tag("leaf.png") %>
        <h5>Eco friendly</h5>
    </div>

    <div class="sustainable-icons">
        <%= image_tag("fares.png") %>
        <h5>Transparent fares</h5>
    </div>

    <div class="sustainable-icons">
        <%= image_tag("loco.png") %>
