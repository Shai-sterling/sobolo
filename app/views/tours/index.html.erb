    </div>
</div>

<section style="width: 100%; background: white">
    <div id="find-tours" class="find-tour">
        <%= image_tag "colors.png", alt: "colors" %>
        <p class="adventure">Find your next adventure </p>
        <p class="adventure-text">Our tours are designed for small groups of 4-5 people, so that we can keep them flexible and tailor them for you along the way. </p>
        <p class="adventure-text"> From the pick-up at your accomodation we will take care of every aspect of the tour, so you don’t need to carry a cent with you.</p>
    </div> 
</section>

<div class="tour-container">
    <% @tours.each do |tour| %>
        <div class="tour-card">
            
            <%= image_tag(tour.image) %>

            <div class="" id="tour-name">
                <p class="tour-name"><%= tour.name.capitalize %></p>
            </div>

            <div class="index-sites">
                <% tour.sites.each do |site| %>
                        <%= site.name %> 
                <% end %>
            </div>

            <div id="read-more">
                <%= link_to "read more ", tour_path(tour), class: "read-more" %>
            </div>
                            
            <div class="tour-card-item", id="tour-price">
                <p><%= number_to_currency(tour.price, unit: "€" ) %></p>    
            </div> 

        </div>
    <% end %>
</div>

